generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]

  @@map("users")
}

model Project {
  id           String        @id @default(uuid())
  name         String
  userId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  importJobs   ImportJob[]
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@index([name])
  @@map("projects")
}

model ImportJob {
  id             String        @id @default(uuid())
  fileName       String
  status         String
  totalLines     Int
  processedLines Int           @default(0)
  errorLines     Int           @default(0)
  completedAt    DateTime?
  projectId      String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  importErrors   ImportError[]
  project        Project       @relation(fields: [projectId], references: [id])
  transactions   Transaction[]

  @@index([fileName])
  @@index([projectId])
  @@map("import_jobs")
}

model ImportError {
  id           String    @id @default(uuid())
  lineText     String
  lineNumber   Int
  errorMessage String
  importJobId  String
  createdAt    DateTime  @default(now())
  importJob    ImportJob @relation(fields: [importJobId], references: [id])

  @@map("import_errors")
}

model Transaction {
  id          String    @id @default(uuid())
  amount      Decimal   @db.Decimal(14, 2)
  currency    String
  description String?
  projectId   String
  importJobId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  job         ImportJob @relation(fields: [importJobId], references: [id], onUpdate: NoAction)
  project     Project   @relation(fields: [projectId], references: [id])

  @@map("transactions")
}
